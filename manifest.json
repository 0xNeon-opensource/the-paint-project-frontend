{
	"manifest_version": 2,
	"name": "Paint",
	"version": "0.1",
	"description": "An MS Paint remake.",
	"icons": {
		"16": "images/icons/16.png",
		"48": "images/icons/48.png",
		"128": "images/icons/128.png"
	},
	"app": {
		"background": {
			"scripts": ["chrome-app.js"]
		}
	},
	"offline_enabled": true,
	"permissions": [
		"fullscreen",
		"clipboardRead",
		"clipboardWrite",
		{"fileSystem": ["write"]}
	],
	"optional_permissions": [
		//"wallpaper",
		"unlimited_storage"
	],
	"file_handlers": {
		"edit": {
			"types": ["image/*"],
			"title": "Paint"
		}
	}
}